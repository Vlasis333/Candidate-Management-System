@model IEnumerable<EFDataAccess.Models.Candidate>

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">First Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">Gender</th>
            <th scope="col">Date of Birth</th>
            <th scope="col"></th>
        </tr>
    </thead>

    @foreach (var item in Model)
    {
        <tr>
            <th scope="row">@Html.DisplayFor(modelItem => item.CandidateId)</th>
            <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
            <td>@Html.DisplayFor(modelItem => item.LastName)</td>
            <td>@Html.DisplayFor(modelItem => item.Gender)</td>
            <td>@Html.DisplayFor(modelItem => item.BirthDate)</td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.CandidateId }) |
                @Html.ActionLink("Details", "Details", new { id = item.CandidateId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.CandidateId })
            </td>
        </tr>
    }

</table>

<div class="container bg-light">
    <div class="col-md-12 text-center">
        @Html.ActionLink("Show All Certificates", "ShowAllCertificates", null, new { @class = "btn btn-primary" })
    </div>
</div>
